{
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "camelcase": 1,
    "complexity": [1, 20],
    "comma-spacing": 1,
    "consistent-return": 0,
    "curly": 2,
    "eol-last": 1,
    "eqeqeq": [2, "smart"],
    "guard-for-in": 2,
    "indent": [2, 2, {"SwitchCase": 1, "CallExpression":{"arguments": "first"}, "MemberExpression": "off"}],
    "max-depth": [1, 4],
    "max-len": [2, 400],
    "no-extra-semi": 2,
    "no-multi-spaces": 2,
    "no-process-exit": 0,
    "no-trailing-spaces": 1,
    "no-underscore-dangle": 0,
    "no-use-before-define": [2, "nofunc"],
    "space-infix-ops": 2,
    "quotes": [1, "single"],
    "semi": [2, "always"],
    "semi-spacing": 2,
    "yoda": [1, "never"]
  },
  "globals": {
    "describe": true,
    "it": true,
    "before": true,
    "beforeEach": true,
    "after": true,
    "afterEach": true
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
